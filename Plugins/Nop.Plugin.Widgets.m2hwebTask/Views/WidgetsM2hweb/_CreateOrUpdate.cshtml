@using Nop.Plugin.Widgets.m2hwebTask.Models
@model m2hwebModel
@using System

@using Nop.Web.Framework
@using Nop.Web.Framework.UI
@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)

<div id="categoryslider-edit">
   
    <div class="content">
        <div class="form-horizontal">
            <div class="panel-group">
                <div class="panel panel-default panel-search">
                    <div class="panel-body">
                        <div class="row">                            
                            <div class="form-group">
                                <div class="col-md-4">

                                    @Html.NopLabelFor(model => model.StoreId)
                                </div>
                                <div class="col-md-8">
                                    @Html.DropDownList("StoreId", Model.AvailableStores)
                                    @Html.ValidationMessageFor(model => model.StoreId)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-4">
                                    @Html.NopLabelFor(model => model.Heading)
                                </div>
                                <div class="col-md-8">                                   
                                        @Html.TextBoxFor(model => model.Heading)
                                        @Html.ValidationMessageFor(model => model.Heading)                                                                      
                                </div>
                            </div>                            
                            <div class="form-group">
                                <div class="col-md-4">
                                    @Html.NopLabelFor(model => model.ZoneId)
                                </div>
                                <div class="col-md-8">
                                    @Html.NopDropDownListFor(model => model.ZoneId, Model.AvailableZones)
                                    @Html.ValidationMessageFor(model => model.ZoneId)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-4">
                                    @Html.NopLabelFor(model => model.CustomDivHTML)
                                </div>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.CustomDivHTML, "RichEditor")
                                    @*@Html.TextAreaFor(model => model.CustomDivHTML)*@
                                    @Html.ValidationMessageFor(model => model.CustomDivHTML)

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-4">
                                    @Html.NopLabelFor(model => model.CustomScript)
                                </div>
                                <div class="col-md-8">
                                    @Html.TextAreaFor(model => model.CustomScript)
                                    @Html.ValidationMessageFor(model => model.CustomScript)

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-4">
                                    @Html.NopLabelFor(model => model.Published)
                                </div>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Published)
                                    @Html.ValidationMessageFor(model => model.Published)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-4">
                                    @Html.NopLabelFor(model => model.DisplayOrder)
                                </div>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.DisplayOrder)
                                    @Html.ValidationMessageFor(model => model.DisplayOrder)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
